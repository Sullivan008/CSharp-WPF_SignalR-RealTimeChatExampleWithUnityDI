<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0-windows</TargetFramework>
	</PropertyGroup>

	<PropertyGroup>
		<UseWPF>true</UseWPF>
	</PropertyGroup>

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
	</PropertyGroup>

	<PropertyGroup>
		<Product>SullyTech.App.Client.Wpf</Product>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="MaterialDesignThemes" Version="4.6.1" />
		<PackageReference Include="Microsoft.Extensions.Hosting" Version="6.0.1" />
		<PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="6.0.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.0" />
		<PackageReference Include="NLog.Extensions.Logging" Version="1.7.4" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\SullyTech.App.Client.Wpf.Modules.Chat\SullyTech.App.Client.Wpf.Modules.Chat.csproj" />
		<ProjectReference Include="..\SullyTech.App.Client.Wpf.Modules.Identity\SullyTech.App.Client.Wpf.Modules.Identity.csproj" />

		<ProjectReference Include="..\SullyTech.App.Client.Wpf.Windows.Main\SullyTech.App.Client.Wpf.Windows.Main.csproj" />

		<ProjectReference Include="..\SullyTech.Guard\SullyTech.Guard.csproj" />

		<ProjectReference Include="..\SullyTech.Wpf.Dialogs.ExceptionDialog\SullyTech.Wpf.Dialogs.ExceptionDialog.csproj" />
		<ProjectReference Include="..\SullyTech.Wpf.Dialogs.MessageDialog\SullyTech.Wpf.Dialogs.MessageDialog.csproj" />

		<ProjectReference Include="..\SullyTech.Wpf.Notifications.Toast\SullyTech.Wpf.Notifications.Toast.csproj" />

		<ProjectReference Include="..\SullyTech.Wpf.TraceListeners.BindingError\SullyTech.Wpf.TraceListeners.BindingError.csproj" />
	</ItemGroup>

	<ItemGroup>
		<None Update="appsettings.json">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
		<None Update="NLog.config">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
		</None>
	</ItemGroup>

</Project>
